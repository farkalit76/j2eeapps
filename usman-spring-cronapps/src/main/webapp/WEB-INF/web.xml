<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!-- Display name below used by the Portal framework for the "Module heading" text in the Page Banner -->
    <display-name>Usman CRON Spring</display-name>

    <!-- Spring MVC dispatcher and Spring MVC Context declaration  -->
    <servlet>
        <servlet-name>Java-Spring-Servlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:com/farkalit/telephony/cron/context/cron-spring-webapp.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Java-Spring-Servlet</servlet-name>
        <url-pattern>/app/views/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <location>/WEB-INF/jsps/common/error.jsp</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
